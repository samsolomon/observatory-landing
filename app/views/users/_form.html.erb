<%= simple_form_for @user, html: {novalidate: false, class: "form-inline"} do |f| %>
  <%= f.input :email, as: :email, label: false, placeholder: "Enter your email", input_html: {required: true } %>
  <div class="form-group submit">
    <%= f.button :submit, "Request Invite", class: "btn primary" %>
  </div>
<% end %>
